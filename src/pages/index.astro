---
import { Container, FeatureCard } from '@components/odyssey-theme';
import Layout from '../layouts/Page.astro';
import HomeHeroSection from '../components/sections/heros/HomeHeroSection.astro';

const seo = {
	title: 'NMES for Astronauts | Home',
	description: 'Introduction to Neuromuscular Electrical Stimulation and Muscle Weakness in Astronauts',
};
---

<Layout seo={seo}>
	<HomeHeroSection>
		<div slot="text-container">
			<h1>NMES for Astronauts</h1>
			<p>
				Combating muscle atrophy in long-duration space missions with Neuromuscular Electrical Stimulation.
			</p>
		</div>
    <picture slot="image-container">
      <img
        src="/assets/images/home/classic-hero.jpg"
        alt="Astronauts in space"
        id="home-hero-image"
      />
    </picture>
	</HomeHeroSection>

	<Container>
    <section class="feature-card__section">
      <h2>Explore the Topic</h2>
      <p>
        Learn about the problem, the current solutions, and how NMES can help.
      </p>
      <div class="feature-card__grid">
        <FeatureCard href="/background" title="The Context" imgSrc="/assets/images/home/screenshots/landing-1">
        </FeatureCard>
        <FeatureCard href="/countermeasures" title="The Solutions" imgSrc="/assets/images/home/screenshots/landing-2">
        </FeatureCard>
        <FeatureCard href="/simulation" title="Simulation" imgSrc="/assets/images/home/screenshots/about">
        </FeatureCard>
        <FeatureCard href="/assessment" title="Take Quiz" imgSrc="/assets/images/home/screenshots/contact">
        </FeatureCard>
      </div>
    </section>
	</Container>
</Layout>

<style>
	.feature-card__section {
		margin: var(--section-margin) auto;
	}
	.feature-card__grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: var(--theme-grid-gap);
	}
	@media (max-width: 768px) {
		.feature-card__grid {
			grid-template-columns: 1fr;
		}
	}
</style>
